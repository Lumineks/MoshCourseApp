
@model List<MoshCourseApp.Models.Movie>
@{
    ViewData["Title"] = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>Movies</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h2>Movies</h2>
    <a asp-controller="Movies" asp-action="New" class="btn btn-primary">NEW MOVIE</a>

    @if (Model.Count == 0)
    {
        <p>We don't have any movies yet.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td><a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id">@movie.Name</a></td>
                        <td>@movie.Genre.Name</td>
                    </tr>
                }
            </tbody>
        </table>

    }

</body>
</html>
