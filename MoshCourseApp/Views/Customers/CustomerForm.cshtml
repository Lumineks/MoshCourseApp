@model MoshCourseApp.ViewModels.CustomerFormViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/MyStyle.css" />

@if (Model.Customer.Id == 0)
{
    ViewData["Title"] = "New";
    <h2>New Customer</h2>
}
else
{
    ViewData["Title"] = "Edit";
    <h1>Edit Customer</h1>
}


@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control", style = "width:250px" })
        @Html.ValidationMessageFor(m => m.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control", style = "width:250px" })
        @Html.ValidationMessageFor(m => m.Customer.MembershipTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.BirthDate)
        @Html.TextBoxFor(m => m.Customer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control", style = "width:250px" })
        @Html.ValidationMessageFor(m => m.Customer.BirthDate)
    </div>
    <div class="form-group form-check">
        @Html.CheckBoxFor(m => m.Customer.IsSubrscribedToNewsLetter)
        <label asp-for="Customer.IsSubrscribedToNewsLetter">Subscribed to NewsLetter?</label>
    </div>
    @Html.HiddenFor(m => m.Customer.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}



